<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="danilo.silva" id="1.0.1" logicalFilePath="src/main/resources/liquibase/changelog/1.0_aluno.xml" >
        <createTable tableName="tb_aluno">
            <column name="codigo" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="nome" type="varchar(20)">
                <constraints nullable="false"/>
            </column>

            <column name="sobrenome" type="varchar(40)">
                <constraints nullable="false"/>
            </column>

            <column name="rg" type="varchar(7)">
                <constraints unique="true"/>
            </column>

            <column name="cpf" type="varchar(11)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="data_nascimento" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="telefone" type="varchar"/>

            <column name="email" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="sexo" type="smallint"/>

        </createTable>

        <createSequence sequenceName="tb_aluno_id_seq" incrementBy="1" startValue="1"/>
    </changeSet>

</databaseChangeLog>