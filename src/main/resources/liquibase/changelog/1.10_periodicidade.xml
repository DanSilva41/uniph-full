<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="danilo.silva" id="1.1.1"
               logicalFilePath="src/main/resources/liquibase/changelog/1.10_periodicidade.xml">
        <createTable tableName="tb_periodicidade">

            <column name="codigo" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="hora_inicio" type="time">
                <constraints nullable="false"/>
            </column>

            <column name="hora_fim" type="time">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence sequenceName="tb_periodicidade_cod_seq" incrementBy="1" startValue="1"/>
    </changeSet>
</databaseChangeLog>