<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="danilo.silva" id="1.1.0"
               logicalFilePath="src/main/resources/liquibase/changelog/1.9_dias_semana.xml">
        <createTable tableName="tb_dias_semana">

            <column name="codigo" type="bytea">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="nome" type="varchar(7)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <ext:loadData encoding="UTF-8"
                      file="liquibase/files/diasSemana.csv"
                      separator=";"
                      identityInsertEnabled="true"
                      tableName="tb_dias_semana"/>
    </changeSet>
</databaseChangeLog>